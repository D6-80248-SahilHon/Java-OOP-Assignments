
public class Pattern_2 {

	public static void main(String[] args) {
		 int height=5;
	     
		 for(int i=1;i<=height;i++)
		 {
			 for(int j=1;j<=height-i;j++)
			 {
				 System.out.println(" ");
			 }
			 for(int k=1;k<=i;k++)
			 {
				 System.out.println("*");
			 }
			 for(int l=1;l<=i;l++)
			 {
				 System.out.println("*");
			 }
	        
	        
		}


	}

}
